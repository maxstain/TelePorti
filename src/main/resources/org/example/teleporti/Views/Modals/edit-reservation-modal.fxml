<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            stylesheets="@../../Styles/Modals.css"
            fx:controller="org.example.teleporti.SceneControllers.EditReservationModalController"
            prefWidth="600.0">

    <VBox fx:id="reservationForm" alignment="CENTER" styleClass="modal">
        <Label styleClass="text-title" text="Edit"/>
        <MenuButton fx:id="trajetField" text="Trajet"/>
        <MenuButton fx:id="passagerField" text="Passager"/>
        <MenuButton fx:id="statusField" text="Status"/>
        <Button styleClass="button" text="Save" onAction="#onSave"/>
        <Button styleClass="button" text="Cancel" onAction="#onCancel"/>
    </VBox>

</AnchorPane>
