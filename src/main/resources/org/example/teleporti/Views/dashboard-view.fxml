<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<?import javafx.scene.chart.PieChart?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.teleporti.SceneControllers.DashboardViewController"
            stylesheets="@../Styles/General.css"
            styleClass="panel-with-background-image, container">

    <!-- Top Menu -->
    <top>
        <HBox styleClass="NavigationBar" alignment="TOP_CENTER">
            <VBox alignment="CENTER_LEFT">
                <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../Images/logo.png"/>
                </ImageView>
            </VBox>
            <HBox alignment="CENTER_RIGHT" spacing="20.0">
                <TextField focusTraversable="false" styleClass="searchBar" fx:id="searchField" promptText="Rechercher"
                           prefWidth="200.0"/>
                <Label styleClass="welcome" fx:id="welcome"/>
            </HBox>
        </HBox>
    </top>

    <!-- Side Menu and Main Content -->
    <center>
        <HBox>
            <!-- Side Menu -->
            <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="side-menu">
                <VBox spacing="10.0">
                    <Button styleClass="button" text="Stats" onAction="#onGotToStats"/>
                    <Button styleClass="button" text="Dashboard" onAction="#onGotToDashboard"/>
                    <Button styleClass="button" text="Profile" onAction="#onGotToProfile"/>
                    <Button styleClass="button" text="Maps" onAction="#onGotToMaps"/>
                    <Button styleClass="button" text="Utilisateurs" onAction="#onGotToUsers"/>
                    <Button styleClass="button" text="Paramétres" onAction="#onGotToSettings"/>
                    <Button alignment="BOTTOM_CENTER" styleClass="button" text="Déconnecter" onAction="#onLogout"/>
                </VBox>
            </HBox>

            <!-- Main Content -->
            <VBox spacing="5.0" styleClass="container" prefWidth="500">
                <VBox styleClass="chart-container" alignment="CENTER" spacing="10.0">
                    <Label styleClass="text-label, h3" style="-fx-text-fill: #fff" text="Utilisateurs"/>
                    <PieChart fx:id="usersPieChart" prefHeight="300.0" prefWidth="500.0"/>
                </VBox>
            </VBox>
        </HBox>
    </center>
</BorderPane>