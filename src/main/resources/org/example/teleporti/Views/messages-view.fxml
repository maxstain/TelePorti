<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" styleClass="panel-with-background-image, container" stylesheets="@../Styles/General.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.teleporti.SceneControllers.MessagesViewController">
    <top>
        <HBox styleClass="NavigationBar">
            <VBox alignment="CENTER_LEFT">
                <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../Images/logo.png" />
                </ImageView>
            </VBox>
            <HBox alignment="CENTER_RIGHT" spacing="20.0">
                <Label fx:id="welcome" styleClass="welcome" />
            </HBox>
        </HBox>
    </top>

    <center>
        <HBox>
            <VBox alignment="CENTER_LEFT" spacing="20.0" styleClass="side-menu">
                <Button alignment="CENTER" onAction="#onGoToProfile" styleClass="button" text="Profile" />
                <Button alignment="CENTER" onAction="#onGoToMessages" styleClass="button" text="Chats" />
                <Button alignment="BOTTOM_CENTER" onAction="#onLogout" styleClass="button" text="DÃ©connecter" />
            </VBox>
            <HBox alignment="CENTER" spacing="20.0" styleClass="container">
                <VBox prefHeight="280.0" prefWidth="170.0" spacing="8.0" styleClass="normal-container">
                    <TextField focusTraversable="false" prefWidth="200.0" promptText="Rechercher" styleClass="searchBar" />
                    <ScrollPane fx:id="scrollPane" />
                    <Button styleClass="button" text="New Conversation" />
                </VBox>
                <VBox fx:id="Conversation" prefHeight="280.0" prefWidth="250.0" styleClass="normal-container" />
            </HBox>
        </HBox>
    </center>
</BorderPane>
